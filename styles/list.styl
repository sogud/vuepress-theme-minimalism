.box-card {
  margin: 10px

  &:first-child {
    margin-top: 20px
  }

  &:last-child {
    margin-bottom: 10px
  }

  .date-time {
    color: #ccc
    margin: 10px 0 20px 30px
    font-size: 0.75rem
  }

  .title {
    font-size: 1.4rem
    margin-left: 30px
    color: #666
    cursor: pointer

    &:hover {
      color: #9c396b
      text-shadow: 1px 1px 1px #ddd
    }
  }

  .tag {
    color: $accentColor
    margin-left: 30px
    cursor: pointer

    &:hover {
      color: #9c396b
      text-shadow: 1px 1px 1px #ddd
    }
  }
}